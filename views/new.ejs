<% include partials/header %>

<div class="container">
	<div class="row justify-content-center">
		<h1 class="text-center mt-5 mb-4 new-campground-heading col-12">Submit a New Campground</h1>

		<form class="new-campground-form mt-2 col-md-8" action="/campgrounds" method="POST">
			<div class="form-group newCampNameForm">
				<label for="name">Name of the campground:</label>
				<input class="form-control" id="name" type="text" name="name">
			</div>
	  		<div class="form-group location">
	    		<label for="description">City, State, and Country (if not in the US)</label>
	    		<textarea class="form-control" id="location" name="location" rows="1"></textarea>
	  		</div>
			<div class="form-group newCampSummary">
	    		<label for="description">A short summary of your camping experience:</label>
	    		<textarea class="form-control" id="description" name="description" rows="3"></textarea>
	  		</div>
	  		<div class="form-group newCampImage">
	  			<label for="image">Enter an image URL:</label>
				<input class="form-control" id="image" type="text" name="image">
			</div>
			<button class="btn btn-primary btn-block submit" type="submit">Submit</button>
			<a href="/campgrounds" class="btn btn-link btn-sm mt-2" role="button">Go Back</a>
		</form>

	</div>
</div>

<script type="text/javascript" src="/scripts/newCampForm.js"></script>
<% include partials/footer %>

