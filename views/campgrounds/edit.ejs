<% include ../partials/header %>

<div class="container">
	<div class="row justify-content-center">
		<h1 class="text-center mt-5 mb-4 new-campground-heading col-12">Edit <%= campground.name %> Info</h1>

		<form class="new-campground-form mt-2 col-md-8" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group newCampNameForm">
				<label for="name">Name of the campground:</label>
				<input class="form-control" id="name" type="text" name="campground[name]" value="<%= campground.name %>">
			</div>
	  		<div class="form-group newCampLocation">
	    		<label for="description">City, State, and Country (if not in the US)</label>
	    		<input class="form-control" id="location" name="campground[location]" value="<%= campground.location %>">
	  		</div>
	  		<div class="form-group newCampPrice">
	    		<label for="price">How much does it cost per night?</label>
	    		<input class="form-control" type="number" id="price" name="campground[price]" min="0.00" step="0.01" value="<%= campground.price %>">
	  		</div>
			<div class="form-group newCampSummary">
	    		<label for="description">A short summary of your camping experience:</label>
	    		<textarea class="form-control" id="description" name="campground[description]" rows="3"><%= campground.description %></textarea>
	  		</div>
	  		<div class="form-group newCampImage">
	  			<label for="image">Enter an image URL:</label>
				<input class="form-control" id="image" type="text" name="campground[image]" value="<%= campground.image %>">
			</div>
			<button class="btn btn-primary btn-block submit" type="submit">Submit</button>
			<a href="/campgrounds/<%= campground._id %>" class="btn btn-link btn-sm mt-2" role="button">Go Back</a>
		</form>

	</div>
</div>

<% include ../partials/footer %>