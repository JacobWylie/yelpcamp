<% include ../partials/header %>

	<% if(currentUser && currentUser.isAdmin) { %>
		<h3>You currently have administrative permissions</h3>
	<% } %>

	<header class="jumbotron">
		<div class="container text-center">
			<h1>Welcome to Campground Reviews!</h1>
			<h5 class="my-4">View our user-submitted campgrounds from all over the world</h5>
			<a href="/campgrounds/new" class="btn btn-primary" role="button">Add a new Campground</a>
			<a href="/campgrounds" class="btn btn-success">View All Campgrounds</a>
			<form class="search-form" action="/campgrounds" method="GET">
				<div class="row justify-content-center">
					<input class="col-sm-6 form-control search-input" type="search" name="search" placeholder="Enter keywords...">
					<input class="col-sm-6 btn btn-info search-btn" type="submit" name="" value="Search">
				</div>
			</form>
			<h6 class="mt-3 mb-0">Search for your favorites!</h6>
		</div>
	</header>

	<div class="row mb-4">

		<!-- display 'no search results' -->
		<div class="col-md-12">
			<% if(noMatch !== undefined) { %>
				<h3 class="text-center"><%= noMatch %></h3>
			<% } %>
		</div>

		<!-- display all campground -->
		<div class="col-lg-12 text-center">
			<% if(noMatch == undefined) { %>
				<h3>Our Most Popular Campgrounds</h3>
			<% } %>
		</div>
	</div> <!-- /row -->

	<div class="row">
		<% campgrounds.forEach((campground => { %>
			<div class="col-lg-4 col-md-6 col-sm-12">
				<div class="card text-center card-outline-secondary index-card" style="">
					<img class="card-img-top index-card-img-top" src="<%= campground.image %>" alt="Card image cap">
					<div class="card-block index-card-block">
						<h3 class="card-title"><%= campground.name %></h3>
				    	<p class="card-text"><%= campground.location %></p>
				    	<a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-success">Explore <%= campground.name %></a>
					</div> <!-- /card-block -->
				</div> <!-- /card -->
			</div> <!-- /col -->
		<%	})) %>
	</div> <!-- /row -->

<% include ../partials/footer %>