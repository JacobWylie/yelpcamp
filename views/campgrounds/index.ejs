<% include ../partials/header %>

<div class="container">

	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Campground Reviews!</h1>
			<p>View our user-submitted campgrounds from all over the world</p>
			<a href="/campgrounds/new" class="btn btn-primary" role="button">Add a new Campground</a>
		</div>
	</header>

	<div class="row mb-4">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds</h3>
		</div>
	</div> <!-- /row -->

	<div class="row">
		<% campgrounds.forEach((campground => { %>
			<div class="col-lg-4 col-md-6 col-sm-12">
				<div class="card text-center card-outline-secondary index-card" style="">
					<img class="card-img-top index-card-img-top" src="<%= campground.image %>" alt="Card image cap">
					<div class="card-block index-card-block">
						<h3 class="card-title"><%= campground.name %></h3>
				    	<p class="card-text"><%= campground.location %></p>
				    	<a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-success">Explore <%= campground.name %></a>
					</div> <!-- /card-block -->
				</div> <!-- /card -->
			</div> <!-- /col -->
		<%	})) %>
	</div> <!-- /row -->

</div> <!-- /container -->

<% include ../partials/footer %>